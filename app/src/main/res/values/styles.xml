<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MapLayersRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/button_map_layer</item>
        <item name="android:height">50dp</item>
        <item name="layout_constraintDimensionRatio">1</item>
    </style>

    <style name="ExpoLISNormalTextSize" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ExpoLISSmallTextSize" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
